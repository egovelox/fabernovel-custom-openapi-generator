{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "lib",
    "noEmit": false,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    "moduleResolution": "node",
    "typeRoots": ["./src/_typings", "node_modules/@types"],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
